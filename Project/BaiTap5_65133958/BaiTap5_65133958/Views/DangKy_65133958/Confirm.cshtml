@{
    ViewBag.Title = "Xác nhận đăng ký";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded-4 mx-auto" style="max-width: 600px; border: 1px solid #ccc;">
        <h4 class="text-center mb-4 text-primary fw-bold text-uppercase">
            Thông tin thành viên đã đăng ký
        </h4>

        <div class="row align-items-center">
            <div class="col-4 text-center">
                <img src="@ViewBag.avatarNV"
                     alt="Ảnh đại diện"
                     class="img-thumbnail shadow-sm"
                     style="width:120px; height:120px; object-fit:cover; border-radius:50%;" />
            </div>
            <div class="col-8">
                <p><strong>Mã nhân viên:</strong> @ViewBag.idNV</p>
                <p><strong>Họ và tên:</strong> @ViewBag.nameNV</p>
                <p><strong>Ngày sinh:</strong> @ViewBag.bodNV</p>
                <p><strong>Email:</strong> @ViewBag.emailNV</p>
                <p><strong>Mật khẩu:</strong> @ViewBag.mkNV</p>
                <p><strong>Đơn vị:</strong> @ViewBag.donViNV</p>
            </div>
        </div>

        <div class="text-center mt-4">
            <a href="@Url.Action("DangKy", "DangKy_65133958")" class="btn btn-outline-primary px-4">
                ← Quay lại trang đăng ký
            </a>
        </div>
    </div>
</div>
